{
  "name": "@muah1987/qarin-cli",
  "version": "1.0.0",
  "description": "AI coding assistant with chained sub-agent orchestration and Arabic-themed UI",
  "type": "module",
  "bin": {
    "qarin": "./index.js"
  },
  "scripts": {
    "dev": "tsx --watch src/index.tsx",
    "build": "tsc",
    "build:binary": "bun build src/index.tsx --compile --outfile qarin",
