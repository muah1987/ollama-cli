{
  "intent_classifier": {
    "enabled": true,
    "confidence_threshold": 0.7,
    "llm_fallback": false,
    "show_intent": true,
    "default_agent_type": null
  },
  "hooks": {
    "Setup": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/setup.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/session_start.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/session_end.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/user_prompt_submit.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/pre_tool_use.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/post_tool_use.py"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/post_tool_use_failure.py"
          }
        ]
      }
    ],
    "SkillTrigger": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/skill_trigger.py"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/permission_request.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/pre_compact.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/stop.py"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/subagent_start.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/subagent_stop.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.local/bin/uv run $OLLAMA_PROJECT_DIR/.ollama/hooks/notification.py"
          }
        ]
      }
    ]
  },
  "agent_models": {
    "code": {"provider": "ollama", "model": "codestral:latest"},
    "review": {"provider": "ollama", "model": "llama3.2"},
    "test": {"provider": "ollama", "model": "llama3.2"},
    "plan": {"provider": "ollama", "model": "llama3.2"},
    "docs": {"provider": "ollama", "model": "llama3.2"}
  },
  "tui": {
    "theme": "dark",
    "sidebar_visible": true,
    "show_timestamps": true,
    "auto_scroll": true
  }
}
