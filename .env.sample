# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_CONTEXT_LENGTH=4096

# Ollama API Key (for https://ollama.com cloud API)
OLLAMA_API_KEY=

# Provider Selection (ollama|claude|gemini|codex|hf)
OLLAMA_CLI_PROVIDER=ollama

# Cloud Ollama (optional, legacy)
OLLAMA_CLOUD_HOST=
OLLAMA_CLOUD_API_KEY=

# Alternative Provider API Keys
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
OPENAI_API_KEY=
HF_TOKEN=

# GitHub Token (for hooks and integrations)
GH_TOKEN=

# Provider Routing (per task type)
OLLAMA_CLI_CODING_PROVIDER=ollama
OLLAMA_CLI_CODING_MODEL=codestral:latest
OLLAMA_CLI_AGENT_PROVIDER=ollama
OLLAMA_CLI_AGENT_MODEL=llama3.2
OLLAMA_CLI_SUBAGENT_PROVIDER=ollama
OLLAMA_CLI_SUBAGENT_MODEL=llama3.2:3b

# Agent-Specific Model Assignments (up to 10 agent types, mixed providers)
# Format: OLLAMA_CLI_AGENT_<TYPE>_PROVIDER and OLLAMA_CLI_AGENT_<TYPE>_MODEL
OLLAMA_CLI_AGENT_CODE_PROVIDER=ollama
OLLAMA_CLI_AGENT_CODE_MODEL=codestral:latest
OLLAMA_CLI_AGENT_REVIEW_PROVIDER=ollama
OLLAMA_CLI_AGENT_REVIEW_MODEL=llama3.2
OLLAMA_CLI_AGENT_TEST_PROVIDER=ollama
OLLAMA_CLI_AGENT_TEST_MODEL=llama3.2
OLLAMA_CLI_AGENT_PLANNING_PROVIDER=ollama
OLLAMA_CLI_AGENT_PLANNING_MODEL=llama3.2
OLLAMA_CLI_AGENT_DOCS_PROVIDER=ollama
OLLAMA_CLI_AGENT_DOCS_MODEL=llama3.2

# Feature Flags
AUTO_COMPACT=true
COMPACT_THRESHOLD=0.85
HOOKS_ENABLED=true
