/* Dark theme -- Claude Code inspired */

Screen {
    background: #0d1117;
    color: #e6edf3;
}

Header {
    background: #161b22;
    color: #7c8aff;
}

Footer {
    background: #161b22;
    color: #484f58;
}

#message-area {
    background: #0d1117;
    scrollbar-color: #30363d;
    scrollbar-color-hover: #7c8aff;
    scrollbar-color-active: #a78bfa;
}

.system-message {
    color: #484f58;
    text-style: dim italic;
    padding: 0 2;
}

Sidebar {
    background: #010409;
    border-right: solid #21262d;
}

Input {
    border: round #30363d;
    background: #161b22;
    color: #e6edf3;
}

Input:focus {
    border: round #7c8aff;
}

Button {
    background: #7c8aff;
    color: #0d1117;
}

Button:hover {
    background: #a78bfa;
}
