/* Light theme -- Claude Code light variant */

Screen {
    background: #ffffff;
    color: #1f2328;
}

Header {
    background: #f6f8fa;
    color: #5b4fcf;
}

Footer {
    background: #f6f8fa;
    color: #656d76;
}

#message-area {
    background: #ffffff;
    scrollbar-color: #d0d7de;
    scrollbar-color-hover: #5b4fcf;
}

.system-message {
    color: #656d76;
    text-style: dim italic;
    padding: 0 2;
}

Sidebar {
    background: #f6f8fa;
    border-right: solid #d0d7de;
}

Input {
    border: round #d0d7de;
    background: #ffffff;
    color: #1f2328;
}

Input:focus {
    border: round #5b4fcf;
}

Button {
    background: #5b4fcf;
    color: #ffffff;
}

Button:hover {
    background: #7c6fe0;
}
