/* ollama-cli TUI base layout -- Claude Code inspired */

Screen {
    layout: vertical;
}

#message-area {
    height: 1fr;
    padding: 0 1;
}

.system-message {
    color: #484f58;
    text-style: dim italic;
    padding: 0 2;
    margin: 0 0;
}

Header {
    dock: top;
}

Footer {
    dock: bottom;
}
